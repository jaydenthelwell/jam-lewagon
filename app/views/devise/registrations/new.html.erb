<div data-controller="sign-up">
<div class="my-container">
  <div class="centered-content">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

    <div class="form-inputs custom-form-style">

      <div class="form-inputs custom-form-style" data-sign-up-target="input">
        <div class="progress mb-5">
          <div class="progress-bar" role="progressbar" aria-valuenow="10"

          aria-valuemin="0" aria-valuemax="100" style="width:10%; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">

            <span class="sr-only">10% Complete</span>
          </div>
        </div>
        <i class="fa-regular fa-file-lines" id="icon"></i>
        <%= f.input :name,
                    required: true,
                    label: "What's your first name?",
                    label_html: { class: "label-size" },
                    autofocus: true,
                    input_html: { class: "text-size", autocomplete: "name" },
                    placeholder: "Name"
                    %>


      </div>

      <div class="form-inputs custom-form-style d-none" data-sign-up-target="input">
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20"

            aria-valuemin="0" aria-valuemax="100" style="width:20%; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">

              <span class="sr-only">20% Complete</span>
            </div>
          </div>
          <i class="fa-regular fa-envelope" id="icon"></i>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "What's your email?",
                    label_html: { class: "label-size" },
                    input_html: { class: "text-size", autocomplete: "email" },
                    placeholder: "email@example.com"
                    %>


      </div>

      <div class="form-inputs custom-form-style d-none" data-sign-up-target="input" >
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="30"
            aria-valuemin="0" aria-valuemax="100" style="width:30%; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">

              <span class="sr-only">30% Complete</span>
            </div>
          </div>
        <i class="fa-solid fa-cake-candles" id="icon"></i>
        <%= f.input :date_of_birth,
                    # as: :string,
                    # required: true,
                    # autofocus: true,
                    label: "What's your date of birth?",
                    label_html: { class: "label-size", autocomplete: "birth_year" },
                    # input_html: { data: { controller: "flatpickr" } }
                    as: :string,
                    input_html: { data: { controller: "flatpickr" } }
                    %>
      </div>

      <div class="form-inputs d-none custom-form-style" id="page4" data-sign-up-target="input" >
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"

            aria-valuemin="0" aria-valuemax="100" style="width:40%; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">
              <span class="sr-only">40% Complete</span>
            </div>
          </div>
        <i class="fa-solid fa-lock" id="icon"></i>
        <%= f.input :password,
                    required: true,
                    label: "Create Password",
                    label_html: { class: "password-size" },
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Reenter Password",
                    label_html: { class: "password-size" },
                    input_html: { autocomplete: "new-password" } %>

      </div>

      <div class="form-inputs custom-form-style d-none" data-sign-up-target="input">
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50"

            aria-valuemin="0" aria-valuemax="100" style="width:50%; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">

              <span>You're doing so well!</span>
            </div>
          </div>
        <i class="fa-solid fa-location-dot" id="icon"></i>
        <%= f.input :location,
                    required: true,
                    label: "Please enter your location below.",
                    label_html: { class: "label-size" },
                    autofocus: true,
                    input_html: { class: "text-size", autocomplete: "name" },
                    placeholder: "e.g. London"
                    %>
      </div>

      <div class="form-inputs gender-form-style d-none" data-sign-up-target="input">
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60"
            aria-valuemin="0" aria-valuemax="100" style="width:60%; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">

              <span class="sr-only">60% Complete</span>
            </div>
          </div>
        <i class="fa-regular fa-user" id="icon"></i>
        <%= f.input :gender,
                    required: true,
                    label: "Which gender best describes you?",
                    label_html: { class: "label-size" },
                    autofocus: true,
                    input_html: { class: "text-size", autocomplete: "name" },
                    collection: ["Female", "Male", "Non-binary", "Other", "Prefer not to answer"],
                    placeholder: "Please select one..."
                    %>
      </div>
      <div class="form-inputs custom-form-style d-none" data-sign-up-target="input">
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="68"

            aria-valuemin="0" aria-valuemax="100" style="width:68%; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">
              <span class="sr-only">68% Complete</span>
            </div>
          </div>
        <i class="fa-solid fa-music" id="icon"></i>
        <%= f.input :on_repeat,
                    required: true,
                    label: "What song could you listen to on repeat?",
                    label_html: { class: "label-size" },
                    autofocus: true,
                    input_html: { class: "text-size", autocomplete: "name" },
                    placeholder: ""
                    %>
      </div>

      <div class="form-inputs custom-form-style d-none" data-sign-up-target="input">
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="76"

            aria-valuemin="0" aria-valuemax="100" style="width:76%; font-weight: 900; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">

              <span>Just a bit more...</span>
            </div>
          </div>
        <i class="fa-solid fa-volume-high" id="icon"></i>
        <%= f.input :all_time_favorite,
                    required: true,
                    label: "If your life had a theme song, what would it be?",
                    label_html: { class: "label-size" },
                    autofocus: true,
                    input_html: { class: "text-size", autocomplete: "name" },
                    placeholder: ""
                    %>
      </div>

      <div class="form-inputs custom-form-style d-none" data-sign-up-target="input">
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="84"
            aria-valuemin="0" aria-valuemax="100" style="width:84%; background-color:#b99cfc; font-weight: 900; color: black; font-size: 14px; font-family: raleway;">

              <span class="sr-only">84% Complete</span>
            </div>
          </div>
        <%= image_tag "microphone.png", height: 35%>
        <%= f.input :go_to_karaoke,
                    required: true,
                    label: "What's your go-to karaoke tune?",
                    label_html: { class: "label-size" },
                    autofocus: true,
                    input_html: { class: "text-size", autocomplete: "name" },
                    placeholder: ""
                    %>
      </div>

      <div class="form-inputs custom-form-style d-none" data-sign-up-target="input">
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="92"
            aria-valuemin="0" aria-valuemax="100" style="width:92%; font-weight: 900; background-color:#b99cfc; color: black; font-size: 14px; font-family: raleway;">

              <span>92%</span>
            </div>
          </div>
        <i class="fa-solid fa-ellipsis" id="icon" style="font-size: 30px;" ></i>
        <%= f.input :description,
                    required: true,
                    label: "Tell us a little about yourself",
                    label_html: { class: "label-size" },
                    autofocus: true,
                    input_html: { class: "text-size", autocomplete: "name" },
                    placeholder: ""
                    %>
      </div>

      <div class="form-inputs custom-form-style d-none" data-sign-up-target="input">
          <div class="progress mb-5">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="97"
            aria-valuemin="0" aria-valuemax="100" style="width:97%; background-color:#b99cfc; color: black; font-weight: 900; font-size: 14px; font-family: raleway;">
              <span>Nearly there!</span>
            </div>
          </div>
        <%= f.input :photos, as: :file,
                    required: true,
                    label: "Pick your photos for your profile",
                    label_html: { class: "label-size" },
                    autofocus: true,
                    input_html: { class: "text-size", multiple: true, autocomplete: "name" },
                    placeholder: ""
                    %>
        <%# f.input :photo, as: :file %>

        <div class="form-actions c-profile" data-sign-up-target="create">
          <%= button_tag type: 'submit', class: "register-button" do %>
            <i class="fa-regular fa-circle-play " style="color: black; font-size: 60px;" id="next-icon"></i>
          <% end %>
        </div>
      </div>
    <% end %>

      <%= link_to "Login", new_user_session_path, class: "nav-link transparent"  %>

    <div class="d-flex justify-content-between navigate-btns" >
      <i data-sign-up-target="prev" class="fa-regular fa-circle-play fa-rotate-180 transparent" style="color: black; font-size: 60px;" id="next-icon" data-action="click->sign-up#prevContent"></i>
      <i data-sign-up-target="next" class="fa-regular fa-circle-play " style="color: black; font-size: 60px;" id="next-icon" data-action="click->sign-up#nextContent"></i>
      <%# <%= image_tag "Spotify_App_Logo.png" data-sign-up-target="next" style="color: black; font-size: 60px;" data-action="click->sign-up#nextContent"%>
    </div>
</div>
</div>
</div>

<%# <%= render "devise/shared/links" %>
